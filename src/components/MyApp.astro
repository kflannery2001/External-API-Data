---
const response = await fetch('https://www.csscolorsapi.com/api/colors');
const allTheColors = await response.json();
---

<div class="overflow-x-auto">
    <table class="table">
      <!-- head -->
      <thead>
        <tr>
          <th></th>
          <th>Name</th>
        </tr>
      </thead>
      <tbody>
        <!-- row 1 -->
        {
            allTheColors.colors.map( color => 
                <tr style={`background: #${color.hex}`}>
                    <td>{color.name}</td>
                    <td>{color.theme}</td>
                </tr>
            )
        }
      </tbody>
    </table>
  </div>

